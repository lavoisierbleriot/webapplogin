pipeline{
     agent any
    
     stages {
  stage('download from repo') {
    steps {
      git branch: 'Adianie', url: 'https://github.com/lavoisierbleriot/webapplogin.git'
    }
  }

  stage('build an artifact') {
 
    steps {
      sh 'mvn package'
    }
  }

  stage('Deploy to nexus') {

    steps {
      nexusArtifactUploader artifacts: [[artifactId: '${POM_ARTIFACTID}', classifier: '', file: '/var/lib/jenkins/workspace/Download, build artifact and deploy to nexus/target/webappAdianie.war', type: 'war']], credentialsId: 'admin', groupId: '${POM_GROUPID}', nexusUrl: '3.83.119.169:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'maven-snapshots', version: '${POM_VERSION}'
    }
  }






}



















}

